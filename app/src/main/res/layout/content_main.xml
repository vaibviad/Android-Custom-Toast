<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Text in Toast"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textColor="#000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration of Toast Long/Short"
            android:id="@+id/duration"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toast with custom Image"
            android:id="@+id/checkBox"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentStart="true"
            android:checked="false" />

    </LinearLayout>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Toast"
        android:id="@+id/defaultBut"
        android:textColor="#ffffff"
        android:background="#00cc77"
        android:layout_weight="1"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="131dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/firstbut"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom Toast- A"
                android:id="@+id/firstbut"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#ffffff"
                android:background="#00cc77"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/thirdbut"
                android:layout_marginRight="5dp"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom Toast- B"
                android:id="@+id/secondbut"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#ffffff"
                android:background="#00cc77"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/thirdbut" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/thirdbut"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom Toast- C"
                android:id="@+id/thirdbut"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#ffffff"
                android:background="#00cc77"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/thirdbut"
                android:layout_marginRight="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom Toast- D"
                android:id="@+id/fourthbut"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#ffffff"
                android:background="#00cc77"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/thirdbut"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
